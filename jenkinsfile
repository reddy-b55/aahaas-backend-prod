pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "laravel_app_image"
        CONTAINER_NAME = "laravel_app_container"
        EC2_HOST = "ec2-user@YOUR_EC2_PUBLIC_IP"
        SSH_KEY = "/path/to/your/key.pem"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/reddy-b55/aahaas-backend-prod.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t $DOCKER_IMAGE .'
            }
        }

        stage('Push Docker Image') {
            steps {
                // Optional: If using Docker Hub
                // sh 'docker login -u <username> -p <password>'
                // sh 'docker tag $DOCKER_IMAGE <dockerhub_username>/laravel_app:latest'
                // sh 'docker push <dockerhub_username>/laravel_app:latest'
                echo "Skipping Docker Hub push for now"
            }
        }

        stage('Deploy to EC2') {
            steps {
                sh """
                scp -i $SSH_KEY docker-compose.yml ec2-user@${EC2_HOST}:/home/ec2-user/
                ssh -i $SSH_KEY ec2-user@${EC2_HOST} 'docker-compose -f /home/ec2-user/docker-compose.yml up -d --build'
                """
            }
        }
    }
}

